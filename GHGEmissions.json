{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "GHG emissions",
    "data": {
        "url": "https://raw.githubusercontent.com/willdiaz635/willdiaz635.github.io/main/KyotoGHGEmissions.csv"
    },
    "title": {
        "text": "Greenhouse Gas emissions (1850-2018)",
        "subtitle": "Source: Climatewatch.com - PIK"
    },
    "height": 500,
    "width": 1000,
    "selection": {
        "Category": {
            "type": "single",
            "fields": [
                "Category"
            ],
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "China",
                    "India",
                    "Kiribati",
                    "Netherlands",
                    "Somalia",
                    "Thailand",
                    "United Kingdom",
                    "United States"
                ],
                "name": "Select Country: "
            }
        }
    },
    "mark": {
        "type": "bar",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Year",
            "type": "temporal"
        },
        "y": {
            "field": "Pollution",
            "title": "Metric Tonnes of Carbon Dioxide",
            "type": "quantitative",
            "axis": {
                "grid": true
            },
            "scale": {
                "type": ""
            }
        },
        "color": {
            "field": "Category",
            "type": "nominal"
        }
    },
    "transform": [
        {
            "calculate": "year(datum.Year)",
            "as": "year"
        },
        {
            "filter": "datum.year>=minYear"
        },
        {
            "filter": "datum.year<=maxYear"
        },
        {
            "filter": {
                "selection": "Category"
            }
        }
    ],
    "params": [
        {
            "name": "minYear",
            "value": 1850,
            "bind": {
                "input": "range",
                "min": 1850,
                "max": 2018,
                "step": 1,
                "name": "Start year:"
            }
        },
        {
            "name": "maxYear",
            "value": 2018,
            "bind": {
                "input": "range",
                "min": 1850,
                "max": 2018,
                "step": 1,
                "name": "End year:"
            }
        }
    ]
}