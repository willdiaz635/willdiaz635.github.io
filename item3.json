{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.2.0.json",
    "data": {
        "url": "https://raw.githubusercontent.com/willdiaz635/willdiaz635.github.io/main/item3.csv"
    },
    "width": 950,
    "height": 400,
    "title": {
        "text": "CO2 emissions, HDI, and Income per Capita",
        "subtitle": "Sources: WorldPopulationReview (scraped), OurWorldinData (csv download), WorldBank (csv download)"
    },
    "layer": [
        {
            "mark": "bar",
            "encoding": {
                "x": {
                    "field": "Country",
                    "type": "nominal",
                    "title": "Country",
                    "scale": {
                        "domain": [
                            "Niger",
                            "Uganda",
                            "Sierra Leone",
                            "Cameroon",
                            "Kenya",
                            "Burundi",
                            "Zambia",
                            "Liberia",
                            "Colombia",
                            "Chile",
                            "Paraguay",
                            "Uruguay",
                            "Ecuador",
                            "Venezuela",
                            "Argentina",
                            "Bolivia",
                            "Spain",
                            "France",
                            "Sweden",
                            "Netherlands",
                            "Germany",
                            "Croatia",
                            "Italy",
                            "Belgium",
                            "Thailand",
                            "Indonesia",
                            "Vietnam",
                            "Cambodia",
                            "Laos",
                            "Malaysia",
                            "Philippines",
                            "Myanmar",
                            "Qatar",
                            "UAE",
                            "Bahrain",
                            "Oman",
                            "Saudi Arabia",
                            "Kuwait",
                            "Jordan",
                            "Israel",
                            "Brazil",
                            "Russia",
                            "India",
                            "China",
                            "South Africa"
                        ]
                    }
                },
                "y": {
                    "field": "CO2",
                    "type": "quantitative",
                    "title": "Annual Carbon Dioxide Emissions (tonnes per capita) (bar)",
                    "axis": {
                        "grid": true
                    },
                    "scale": {
                        "domain": [
                            0,
                            40
                        ]
                    }
                }
            }
        },
        {
            "mark": "point",
            "encoding": {
                "x": {
                    "field": "Country",
                    "type": "ordinal"
                },
                "y": {
                    "field": "HDI",
                    "type": "quantitative",
                    "title": "Human Development Index (point)",
                    "axis": {
                        "grid": false
                    },
                    "scale": {
                        "domain": [
                            0,
                            1
                        ]
                    }
                },
                "color": {
                    "value": "orange"
                }
            }
        }
    ],
    "resolve": {
        "scale": {
            "y": "independent"
        }
    }
}