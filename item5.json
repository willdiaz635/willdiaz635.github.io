{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/willdiaz635/willdiaz635.github.io/main/item5.csv"
    },
    "height": 500,
    "width": 1000,
    "title": {
        "text": "Scatterplot Pan and Zoom : Death Rate from Air Pollution on GDP/Capita (2015)",
        "subtitle": "Source: Our World In Date, World Bank",
        "subtitleFontStyle": "italic"
    },
    "params": [
        {
            "name": "grid",
            "select": "interval",
            "bind": "scales"
        }
    ],
    "layer": [
        {
            "mark": {
                "type": "circle",
                "size": 80,
                "tooltip": {
                    "content": "data"
                },
                "color": "blue"
            },
            "encoding": {
                "x": {
                    "field": "Death rate from air pollution (per 100,000, age-standardised)",
                    "title": "Death Rate from Air Pollution (per 100,000, age-standardised)",
                    "type": "quantitative",
                    "axis": {
                        "domain": true
                    }
                },
                "y": {
                    "field": "GDP/Capita",
                    "title": "GDP/Capita (current $US)",
                    "type": "quantitative"
                },
                "color": {
                    "field": "Region",
                    "type": "nominal",
                    "title": "Continent:",
                    "scale": {
                        "scheme": "set1"
                    }
                }
            }
        }
    ]
}