{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/willdiaz635/willdiaz635.github.io/main/currencies.csv"
    },
    "width": "container",
    "title": {
        "text": "Linear regression: Euro vs. Pound (Dollar Value) over the past two years",
        "subtitle": "Data from Yahoo Finance",
        "subtitleFontStyle": "italic"
    },
    "layer": [
        {
            "mark": {
                "type": "point",
                "tooltip": true,
                "color": "orange"
            },
            "encoding": {
                "x": {
                    "field": "EURUSD=X",
                    "title": "EUR",
                    "type": "quantitative",
                    "scale": {
                        "domain": [
                            1.04,
                            1.24
                        ]
                    },
                    "axis": {
                        "domain": true
                    }
                },
                "y": {
                    "field": "GBPUSD=X",
                    "title": "GBP",
                    "type": "quantitative",
                    "scale": {
                        "domain": [
                            1.1,
                            1.45
                        ]
                    }
                }
            }
        },
        {
            "mark": {
                "type": "line",
                "color": "navy"
            },
            "transform": [
                {
                    "regression": "EURUSD=X",
                    "on": "GBPUSD=X"
                }
            ],
            "encoding": {
                "x": {
                    "field": "EURUSD=X",
                    "type": "quantitative"
                },
                "y": {
                    "field": "GBPUSD=X",
                    "type": "quantitative"
                }
            }
        },
        {
            "transform": [
                {
                    "regression": "EURUSD=X",
                    "on": "GBPUSD=X",
                    "params": true
                },
                {
                    "calculate": "'RÂ²: '+format(datum.rSquared, '.2f')",
                    "as": "R2"
                }
            ],
            "mark": {
                "type": "text",
                "color": "orange",
                "x": "width",
                "align": "right",
                "y": -10
            },
            "encoding": {
                "text": {
                    "type": "nominal",
                    "field": "R2"
                }
            }
        }
    ]
}